<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TelaComprovante" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bold_text_style">
        <item name="android:textColor">@color/text_light_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textColor">@color/text_light_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="buttons_style" parent="normal_text_style"><item name="android:layout_height">92dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:backgroundTint">@color/button_white</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">100dp</item>
    </style>

</resources>